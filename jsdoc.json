{
  "source": {
    "include": ["src", "run.js"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "docs/api",
    "recurse": true,
    "readme": "README.md",
    "template": "default"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
